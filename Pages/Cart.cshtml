@page
@model CartModel
@{
    ViewData["Title"] = "Shopping Cart";
}
<h1>Shopping Cart</h1>

@if (!Model.Cart.Any())
{
    <div class="alert alert-info">Your cart is empty. <a href="/">Continue shopping</a></div>
}
else
{
    <table class="table">
        <thead><tr><th>Product</th><th>Qty</th><th>Price</th><th>Total</th><th></th></tr></thead>
        <tbody>
        @foreach (var item in Model.Cart)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <form method="post" asp-page-handler="UpdateQty" class="d-inline-flex">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <input type="number" name="qty" value="@item.Quantity" min="1" class="form-control" style="width:80px"/>
                        <button class="btn btn-sm btn-secondary ms-2">Update</button>
                    </form>
                </td>
                <td>₹@item.Price</td>
                <td>₹@item.LineTotal</td>
                <td>
                    <form method="post" asp-page-handler="Remove" class="d-inline">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <button class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <h4>Total: ₹@Model.Cart.Sum(i => i.LineTotal)</h4>
        <a class="btn btn-success" asp-page="/Checkout">Checkout</a>
    </div>
}
